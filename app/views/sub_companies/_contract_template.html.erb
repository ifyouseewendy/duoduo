<% identifiers = sub_company.contract_templates_identifiers %>
<ul>
  <% sub_company.contract_templates.each_with_index do |ct, idx| %>
    <li>
      <span><%= identifiers[idx] %></span>
      <span>( <%= link_to '下载', ct.url %>
        <%= form_tag(remove_contract_template_sub_company_path(sub_company), method: :delete, class: 'form_tag') do %>
          <%= hidden_field_tag 'contract_template_id', idx %>
          <%= link_to "删除",  "#", :onclick=>"$(this).closest('form').submit()" %>
        <% end %>
         )
      </span>
    </li>
  <% end %>
</ul>

<%= form_for SubCompany.new, url: add_contract_template_sub_company_path(sub_company), class: 'form_tag' do |f| %>
  <%= f.file_field :contract_template %>
  <%= link_to "上传",  "#", :onclick=>"$(this).closest('form').submit()" %>
<% end %>

